<h1>Current shit</h1>

<table class ="listing">
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th>Size</th>
    <th>Description</th>
    <th>Box</th>
    <th>Created</th>
  </tr>

<% @widgets.each do |widget| %>
  <tr>
    <td><%= widget.name %></td>
    <td><%= widget.color %></td>
    <td><%= widget.size %></td>
     <td><%= widget.description %></td>
    <td>
      <%if widget.box%>
        <%=h widget.box.material%>
        <% else %>
        None
        <% end %>
    </td>
    <td><%=h "#{time_ago_in_words(widget.created_at)} ago" %></td>
    <td><%= link_to 'Show', widget %></td>
    <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
    <td><%= link_to 'Destroy', widget, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Widget', new_widget_path %>

<%= form_tag '/widgets/filter', :method=>:get do%>  
<%= text_field_tag :size, params[:size]%>
<%= submit_tag "Smaller"%>
<%end%>

